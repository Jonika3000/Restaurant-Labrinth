<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
            <link href="https://fonts.googleapis.com/css2?family=Gwendolyn:wght@400;700&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="bg-background">
        <div class="box">
            {% block body %}{% endblock %}
        </div>
        <ul class="flex flex-row items-center justify-center gap-2.5">
            {% for item in menuFooter %}
                <li><i class="{{ item.icon }}"></i><a href="{{ item.uri }}"></a></li>
            {% endfor %}
        </ul>
        <p class="text-white text-center mt-2">All rights reserved <i class="fa-regular fa-copyright text-white"></i></p>
        <ul class="flex flex-row items-center justify-center gap-2.5">
            {% for locale in ['en', 'pl'] %}
                <li>
                    <a href="{{ path('app_home_page', {'_locale': locale}) }}" class="text-white">
                        {{ locale }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </body>
</html>
