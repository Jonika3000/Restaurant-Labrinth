{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}


    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
        <div class="w-full bg-background rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h1 class="text-xl font-bold leading-tight tracking-tight text-white md:text-2xl">
                    {{ 'Register'|trans }}
                </h1>
                {{ form_start(registrationForm, {'attr': {'class': 'space-y-4 md:space-y-6'}}) }}
                <div>
                    <label for="email" class="block mb-2 text-sm font-medium text-white">{{ 'Your.email'|trans }}</label>
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:yellow focus:border-yellow block w-full p-2.5'}}) }}
                    <div class="text-red text-sm">{{ form_errors(registrationForm.email) }}</div>
                </div>
                <div>
                    <label for="login" class="block mb-2 text-sm font-medium text-white">{{ 'Login'|trans }}</label>
                    {{ form_widget(registrationForm.login, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:yellow focus:border-yellow block w-full p-2.5'}}) }}
                    <div class="text-red text-sm">{{ form_errors(registrationForm.login) }}</div>
                </div>
                <div>
                    <label for="plainPassword"  class="block mb-2 text-sm font-medium text-white">{{ 'Password'|trans }}</label>
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:yellow focus:border-yellow block w-full p-2.5'}, 'label': 'Password'}) }}
                    <div class="text-red text-sm">{{ form_errors(registrationForm.plainPassword) }}</div>
                </div>
                <div class="flex flex-row items-center gap-2 h-full">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:yellow focus:border-yellow block   p-2.5'}}) }}
                    <label for="agreeTerms" class="block text-sm font-medium text-white">{{ 'Agree.to.terms'|trans }}</label>
                    <div class="text-red text-sm">{{ form_errors(registrationForm.agreeTerms) }}</div>
                </div>
                <div class="text-red text-sm">{{ form_errors(registrationForm) }}</div>
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
                <button type="submit" class="w-full text-white bg-purple hover:bg-yellow focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">{{ 'Register'|trans }}</button>
                <p class="text-sm font-light text-gray-400">
                    {{ 'Already.have.an.account?'|trans }} <a href="{{ path('app_login') }}" class="font-medium text-primary-600 hover:underline">{{ 'Login'|trans }}</a>
                </p>
            </div>
        </div>
    </div>

{% endblock %}
