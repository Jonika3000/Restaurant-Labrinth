{% extends 'layout/index.html.twig' %}

{% block title %}{{ event.name }}{% endblock %}

{% block main %}
    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <div class="bg-background overflow-hidden shadow-xl sm:rounded-lg">
            <div class="p-6 sm:px-20 bg-background border-b border-gray-200">
                <div class="flex flex-col justify-center items-center">
                    <h1 class="text-2xl font-bold leading-tight text-white">{{ event.name }}</h1>
                    <p class="mt-2 text-sm text-white">{{ event.date|date('d.m.Y') }}</p>
                    <img class="object-cover rounded-lg mt-4" src="{{ asset(uploads_base_path ~ '/' ~ event.photo) }}" alt="{{ event.name }}">
                     <div class="text-white mt-5"> {{ event.text| raw }} </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
